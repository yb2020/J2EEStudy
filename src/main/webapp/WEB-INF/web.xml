<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>helloWorldServlet</servlet-name>
        <servlet-class>com.gebilaoyi.j2ee.lesson2.servlet.MyFirstServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>helloWorldServlet</servlet-name>
        <url-pattern>/helloWorld</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logonServlet</servlet-name>
        <servlet-class>com.gebilaoyi.j2ee.lesson3.LogonServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logonServlet</servlet-name>
        <url-pattern>/logon</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>databaseServlet</servlet-name>
        <servlet-class>com.gebilaoyi.j2ee.lesson5.DatabaseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>databaseServlet</servlet-name>
        <url-pattern>/databaseServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ajaxServlet</servlet-name>
        <servlet-class>com.gebilaoyi.j2ee.lesson5.AjaxServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ajaxServlet</servlet-name>
        <url-pattern>/ajaxServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>databaseEditorServlet</servlet-name>
        <servlet-class>com.gebilaoyi.j2ee.lesson6.DatabaseEditorServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>databaseEditorServlet</servlet-name>
        <url-pattern>/databaseEditorServlet</url-pattern>
    </servlet-mapping>

</web-app>